<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">
	
	<context:component-scan base-package="kr.or.ddit" use-default-filters="false">
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
		<context:include-filter type="annotation" expression="org.springframework.web.bind.annotation.ControllerAdvice"/>
	</context:component-scan>
<!-- 	커맨드핸들러 등록 -->
	
<!-- 	웹상에서 발생한 것 처리 -> 핸들링맵핑, 핸들링 어댑터 등록 -->
	<mvc:annotation-driven validator="validator"></mvc:annotation-driven>
	
<!-- 	팩토리빈은 팩토리에서 생성되는 객체가 리턴된다. -->
<!-- 	핸들러 어댑터는 밸리데이션을 실행할 수 있어야 한다. annotation-driven 과 연동한게 아니라 어댑터랑 연결함. -->
	<bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean"
		p:validationMessageSource-ref="messageSource"
	/>
	
	<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource" 
		p:basenames="kr.or.ddit.msgs.message, kr.or.ddit.msgs.errorMessage"
	/>
	
	
	<bean id="IRVR" class="org.springframework.web.servlet.view.InternalResourceViewResolver" 
		p:prefix="/WEB-INF/views/"
		p:suffix=".jsp"
	/>
<!-- 		p:order="2" -->
<!-- 		인터널 뷰리저뷰는 언제나 마지막으로 가야함. 얘가 못찾으면 404 보내버림. 근데 마지막으로 들어가야할 애는 우선순위 설정을 생략할 수 있음. -->

<!-- 	요청이 빈아이디랑 같은지 확인 ex.밑에 제이슨	 -->
	<bean id="BNVR" class="org.springframework.web.servlet.view.BeanNameViewResolver"
		p:order="1"
	/>
	
<!-- 	타일스는 데피니션 설장파일의 위치를 알려줘야 하기 때문에 알려줌. -->
	<bean class="org.springframework.web.servlet.view.tiles3.TilesConfigurer" 
		p:definitions="/WEB-INF/tiles/*-definitions.xml"
	/>
	<bean class="org.springframework.web.servlet.view.tiles3.TilesViewResolver"
		p:order="2"
	/>
	
	<bean id="jsonView" class="org.springframework.web.servlet.view.json.MappingJackson2JsonView"></bean>
	
	<mvc:resources location="/resources/" mapping="/resources/**" cache-period="0"></mvc:resources>
	
<!-- 	<bean class="org.springframework.web.servlet.i18n.SessionLocaleResolver"></bean>	 -->
	<bean id="localeResolver" class="org.springframework.web.servlet.i18n.CookieLocaleResolver"
		p:cookieName="localeCookie"
		p:cookieMaxAge="#{60*60*24*7}"
		p:cookiePath="/"
	/>	
	
<!-- 	필터처럼 인터셉터들을 이 안에 넣어서 사용. 인터셉터 - 필터가 밖에 있으니까 필터 기능 구현하기 위해서 사용 -->
	<mvc:interceptors>
		<bean class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor" 
			p:paramName="lang" 
		/>
	</mvc:interceptors>
</beans>
